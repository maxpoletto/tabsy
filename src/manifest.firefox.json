{
    "manifest_version": 3,
    "name": "Tabsy Link Copier",
    "version": "1.2",
    "description": "Copies all open tabs as HTML or Markdown links",
    "permissions": [
        "contextMenus",
        "tabs"
    ],
    "action": {
        "default_title": "Copy Tab Links",
        "default_icon": "icon48.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{6d048006-d0e4-4d6e-adf4-4697bc600e46}",
            "strict_min_version": "133.0"
        }
    }
}