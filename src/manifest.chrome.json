{
    "manifest_version": 3,
    "name": "Tabsy Link Copier",
    "version": "1.2",
    "description": "Copies all open tabs as HTML or Markdown links",
    "permissions": [
        "contextMenus",
        "tabs"
    ],
    "action": {
        "default_title": "Copy Tab Links",
        "default_icon": "icon48.png"
    },
    "background": {
        "service_worker": "background.js"
    }
}